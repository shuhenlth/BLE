.deviceCard-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 40rpx;
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.device-name {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}

.device-name .beacon {
  margin-left: 15rpx;
  padding: 3rpx 8rpx;
  background-color: yellowgreen;
  border-radius: 5rpx;
  font-size: 20rpx;
  color: #fff;
}

.device-id {
  font-size: 23rpx;
  font-weight: light;
  line-height: 35rpx;
  color: #999;
}

.device-rssi {
  font-size: 25rpx;
}