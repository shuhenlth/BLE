page {
  padding: 15rpx;
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
}

.nav-wrap {
  width: 100vw;
  --td-navbar-color: #fff;
  --td-navbar-bg-color: #0052d9;
}
.rec-textarea-wrap {
  margin-top: 20rpx;
  display: block;
  padding: 30rpx;
  padding-top: 0rpx;
  width: 100%;
  height: 35vh;
  font-size: 32rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  box-sizing: border-box;
  overflow-x: none;
  overflow-y: scroll;
  word-wrap: break-word;
  word-break: normal;
}
.rec-wrap-placeholder {
  font-size: 32rpx;
  font-weight: lighter;
  color: #999;
}
.send-textarea-wrap {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}
.send-textarea-content {
  height: 15vh !important;
  font-size: 32rpx !important;
}
.operations-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.operations-total {
  display: flex;
  flex-direction: column;
}
.operations-btns {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 15rpx;
  box-sizing: border-box;
}
.operations-btns_checkBox {
  margin-right: 30rpx;
}
.operations-btns_button {
  padding: 8rpx 12rpx !important;
  width: 120rpx !important;
  height: 60rpx !important;
  line-height: 60rpx !important;
}
.operations-timer {
  display: flex;
  align-items: center;
}
.input-class0 {
  margin-right: 15rpx;
  padding: 5rpx 10rpx !important;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.disconnect_btn{
  margin: 25rpx 35rpx 0rpx 35rpx;
  background-color: rgb(44, 134, 187);
  color: white;
}
.send{
  width: 30%;
  height: 80rpx;
  color: white;
}



.div{
  line-height: 60rpx;
  font-weight: bolder;
}
.line_view{
  margin: 20rpx 90rpx 0rpx 90rpx;
  display: flex;
  height: 60rpx;
}
.input-class {
  margin-left: 30rpx;
  height: 60rpx;
  width: 60%;
  line-height: 60rpx;
  background-color: #eee;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  box-sizing: border-box;
}


.outer{
  display: flex;
  margin: 20rpx 50rpx;
}
.parentstyle {
  display: flex;
  height: 20rpx;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  /* margin: 20rpx 150rpx; */
  margin-left: 20rpx;
  padding: 20rpx;
}
.parentstyle .imageStyle {
  width: 50rpx;
  height: 41rpx;
  margin-right: 15rpx;
}
.parentstyle .centerStyle {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.btn{
  display: flex;
  margin: 30rpx 35rpx 0rpx 35rpx;
  font-family: 'Courier New', Courier, monospace;
}
.saveChanges{
  width: 30%;
  height: 80rpx;
  background-color: rgb(28, 173, 71);
  color: white;
}




.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 27px;
  height: 27px;
}

.tab-bar-item view {
  font-size: 10px;
}


.body-view {
  margin-top: 10px
}
.switch-view {
  margin-left: 5px
}
